networks:
  softplan-network:
    driver: bridge
services:
  softplan.api1:
    build:
      context: D:\Visual Studio\Softplan\app
      dockerfile: src/Api1/Softplan.Api1/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: http://+:5001
    image: softplanapi1
    networks:
      softplan-network: {}
    ports:
    - published: 5001
      target: 5001
  softplan.api2:
    build:
      context: D:\Visual Studio\Softplan\app
      dockerfile: src/Api2/Softplan.Api2/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: http://+:5002
    image: softplanapi2
    networks:
      softplan-network: {}
    ports:
    - published: 5002
      target: 5002
version: '3.4'